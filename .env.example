# ==========================================================
# SarahMemory — Example Environment Configuration
# This file is SAFE for GitHub. It contains NO credentials.
#
# To use:
#   1. Copy this file to ".env"
#   2. Fill in any private fields you want to override locally
#
# NOTE:
#   By default, SarahMemory will connect to the OFFICIAL
#   SarahMemory Cloud backend. Users DO NOT need to run
#   their own cloud server unless they deliberately choose to.
# ==========================================================


# ------------------------------
# SarahMemory Runtime Mode
# ------------------------------
# "client" = Local program connecting to the official Cloud.
# "cloud"  = For advanced users running their own backend.
RUN_MODE=client
SERVER_MODE=client
LOCAL_ONLY_MODE=false
WEB_RESEARCH_ENABLED=true
SAFE_MODE=false


# ------------------------------
# Official SarahMemory Cloud Worker
# Do NOT change unless self-hosting your own cloud server.
# ------------------------------
WORKER_URL=https://worker.sarahmemory.com


# ------------------------------
# Cloud Database (Official Cloud Only)
# Local users do NOT need to change these.
# ------------------------------
CLOUD_DB_ENABLED=true
CLOUD_DB_HOST=
CLOUD_DB_NAME=
CLOUD_DB_USER=
CLOUD_DB_PASSWORD=
CLOUD_DB_PORT=3306


# ------------------------------
# SFTP Upload Mode (Official Cloud Only)
# Local users do NOT need to modify.
# ------------------------------
UPLOAD_MODE=sftp
UPLOAD_SFTP_HOST=
UPLOAD_SFTP_USER=
UPLOAD_SFTP_PASS=
UPLOAD_BASE_DIR=/public_html/api


# ------------------------------
# PythonAnywhere Cloud Flags
# ------------------------------
PYTHONANYWHERE_MODE=true
NETWORK_ONLINE=true


# ------------------------------
# API Keys (Local override - OPTIONAL)
# Leave blank unless user wants to run local API calls.
#
# If left blank:
#   → the local client will rely on the Cloud backend
#     for LLM operations.
# ------------------------------
OPENAI_API_KEY=
CLAUDE_API_KEY=
ANTHROPIC_API_KEY=
MISTRAL_API_KEY=
GEMINI_API_KEY=
HF_API_KEY=
DEEPSEEK_API_KEY=
GROQ_API_KEY=
COHERE_API_KEY=
AZURE_OPENAI_KEY=


# ------------------------------
# Debug / Monitoring
# ------------------------------
LOG_LEVEL=INFO


# ------------------------------
# SarahMemory Internal Security Keys
# DO NOT EXPOSE REAL VALUES PUBLICLY.
# For GitHub, these remain blank.
# ------------------------------
SARAH_AI_AGENT_ENABLED=true
SARAH_VAULT_PASSWORD=
SARAHMEMORY_AI_ADMIN_KEY=
SARAHMEMORY_AI_EMAIL_PASS=
SARAHMEMORY_MESH_SECRET=
SarahNet=
SarahToken=
SM_CB_API_KEY1=
SM_CB_API_SKEY1=
SM_CB_CID=
SM_CB_OAuth_CID=
SM_CB_OAuth_SECRET=
GRAPH_API_TOKEN=
HF_TOKEN=
BTCWalletREC=


# ------------------------------
# Optional Custom AI Endpoint Override
# Only modify if user wants to point locally-run LLMs.
# ------------------------------
OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions
