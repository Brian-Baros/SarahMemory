# ============================================================
# SARAHMEMORY AiOS — ENVIRONMENT CONFIGURATION (v8.x)
#
# This file defines:
# - Runtime behavior
# - Security & secrets
# - Mods / Patch feeds
# - UI selection
# - Future AGI toggles
#
# ⚠️ NEVER COMMIT REAL SECRETS TO GITHUB
# Use .env.sample with placeholders only.
# ============================================================


# ============================================================
# CORE RUNTIME MODE
# Controls how SarahMemory runs (local / cloud / hybrid)
# ============================================================

RUN_MODE=cloud                  # local | cloud | hybrid
SERVER_MODE=cloud               # cloud = API server active
LOCAL_ONLY_MODE=false           # true disables ALL network access
SAFE_MODE=false                 # true disables risky modules

NETWORK_ONLINE=true             # force network availability flag
PYTHONANYWHERE_MODE=true        # enables PythonAnywhere-safe behavior

DEVELOPERMODE = True
# ============================================================
# PUBLIC ENDPOINTS
# Used for CORS, UI links, self-reporting
# ============================================================

PUBLIC_UI_URL=https://ai.sarahmemory.com
PUBLIC_API_BASE=https://api.sarahmemory.com


# ============================================================
# PROJECT IDENTITY & VERSIONING
# Used by updater, mod loader, diagnostics, and UI
# ============================================================

PROJECT_VERSION=8.0.0           # MUST match core version
AUTHOR=Brian Lee Baros
REVISION_START_DATE=2025-12-21  # system overhaul reference date


# ============================================================
# AI AGENT CORE CONTROL
# Enables / disables autonomous reasoning systems
# ============================================================

AI_AGENT_ENABLED=true           # master AI control switch
USE_ADVANCED_AGENT=true         # enables v8+ agent logic
ADVANCED_AGENT_THREADS=4        # worker threads for reasoning

AI_AGENT_RESUME_DELAY_MS=1000   # delay before agent resumes when idle
CONTEXT_BUFFER_SIZE=50          # memory window size (conversation / reasoning)


# ============================================================
# PERFORMANCE & TOOL EXECUTION LIMITS
# Prevents runaway tasks and overload
# ============================================================

MAX_PARALLEL_TOOLS=5
TOOL_TIMEOUT_SECONDS=10


# ============================================================
# LEARNING & ADAPTATION PARAMETERS
# Used by adaptive learning & memory systems
# ============================================================

LEARNING_RATE=0.01
ADAPTATION_INTERVAL_SEC=60

CONFIDENCE_THRESHOLD=0.7        # minimum confidence for autonomous actions
REFLECTION_INTERVAL=10          # self-review cycle (minutes)


# ============================================================
# KNOWLEDGE GRAPH / EMBEDDINGS
# Controls internal memory graph size
# ============================================================

KNOWLEDGE_NODE_LIMIT=10000
EMBEDDING_DIMENSION=64


# ============================================================
# PREDICTION / PATTERN ANALYSIS
# ============================================================

PREDICTION_CONFIDENCE_MIN=0.3
PATTERN_HISTORY_DAYS=30


# ============================================================
# LOGGING & DEBUGGING
# ============================================================

LOG_LEVEL=INFO                  # DEBUG | INFO | WARNING | ERROR
DEBUG=false
NODE_ENV=production


# ============================================================
# MODS & PATCH SYSTEM (CRITICAL)
# Enables versioned patch loading without core edits
# ============================================================

SM_MODS_ENABLED=true            # master mod system switch
SM_MODS_ROOT=./data/mods        # root mods directory
SM_MODS_ACTIVE_VERSION=v800     # current active patch version

# Version fallback chain example:
# v801 -> v800 -> core


# ============================================================
# GITHUB PATCH FEED (READ-ONLY)
# Used by SarahMemoryUpdater.py
# ============================================================

SM_GITHUB_PATCH_REPO=brian-baros/sarahmemory
SM_GITHUB_PATCH_BRANCH=main
SM_GITHUB_PATCH_MANIFEST=patches/manifest.json

# Optional token (USER PROVIDED ONLY — NEVER COMMIT)
SM_GITHUB_READ_TOKEN=
SM_CORP_PATCH_BASE_URL=https://api.sarahmemory.com
SM_CORP_PATCH_MANIFEST=manifest.json

# Provide at least ONE verification method:
SM_LICENSE_PUBLIC_KEY_B64=
# OR
SM_LICENSE_HMAC_SECRET=

# ============================================================
# DATABASE — CLOUD (OPTIONAL)
# GoogieHost / external MySQL
# ============================================================

