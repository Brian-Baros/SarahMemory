{
  "id": "com.softdev0.smartdevice.mqtt.tcp",
  "name": "Smart Device MQTT Driver",
  "type": "driver",
  "version": "1.0.0",
  "author": "SOFTDEV0 LLC / Brian Lee Baros",
  "description": [
    {
      "id": "broker",
      "title": "Broker",
      "fields": [
        {
          "key": "host",
          "label": "MQTT Host",
          "type": "string",
          "placeholder": "192.168.1.2"
        },
        {
          "key": "port",
          "label": "Port",
          "type": "int",
          "min": 1,
          "max": 65535
        },
        {
          "key": "username",
          "label": "Username",
          "type": "string"
        },
        {
          "key": "password",
          "label": "Password",
          "type": "string"
        }
      ]
    },
    {
      "id": "topics",
      "title": "Topics",
      "fields": [
        {
          "key": "base_topic",
          "label": "Base Topic",
          "type": "string",
          "placeholder": "home/sarahmemory"
        }
      ]
    },
    {
      "id": "autoload",
      "title": "Autoload",
      "fields": [
        {
          "key": "enabled",
          "label": "Enabled",
          "type": "bool"
        },
        {
          "key": "autoload",
          "label": "Autoload on boot",
          "type": "bool"
        }
      ]
    }
  ],
  "api_compat": {
    "min": "8.0.0",
    "max": "8.9.9"
  },
